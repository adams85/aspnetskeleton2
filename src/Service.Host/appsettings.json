{
  "AllowedHosts": "*",

  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "File": {
      "IncludeScopes": true,
      "BasePath": "Logs",
      "EnsureBasePath": true,
      "Files": [
        {
          "Path": "<date:yyyyMMdd>/app.log"
        }
      ]
    }
  }
}
