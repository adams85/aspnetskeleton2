@using Karambolo.Common
@using WebApp.Service
@using WebApp.Service.Mailing.Users

@inherits WebApp.Service.Template<UserLockedOutMailModel>

@inject Microsoft.Extensions.Options.IOptions<ApplicationOptions> ApplicationOptions

@{
    var url = UriUtils.BuildPath(GetUIBaseUrl(ApplicationOptions), "Account/ResetPassword");
}

<!doctype html>
<html lang="@GetLanguageCode(System.Globalization.CultureInfo.CurrentUICulture)">
<head>
    <meta charset="utf-8" />
    <title>@T["Account Lockout"]</title>
</head>
<body>
    <h4>@T["[THIS IS AN AUTOMATED MESSAGE - PLEASE DO NOT REPLY DIRECTLY TO THIS EMAIL]"]</h4>
    <p>
        @T["Dear {0},", Model.Name ?? Model.UserName]
    </p>
    <p>
        @T["Your account has been disabled due to too many unsuccessful login attempts."]
    </p>
    <p>
        @T["In order to re-enable your account, you need to reset your password by visiting the link below:"]<br />
        <a href="@url">@url</a>
    </p>
    <p>
        @T["Best regards,"]<br />
        <!-- TODO -->
        Support
    </p>
</body>
</html>
