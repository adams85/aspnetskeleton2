@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var activeSubMenuItem = (string)ViewData["ActiveSubMenuItem"];
}

@section Stylesheets {
    @RenderSection("Stylesheets", required: false)
}

@section ScriptsHead {
    @RenderSection("ScriptsHead", required: false)
}

@* https://www.jonathanbriehl.com/2014/01/17/vertical-menu-for-bootstrap-3/ *@
<div class="row">
  <div class="col-sm-2">
    <div class="sidebar-nav">
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-collapse sidebar-navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="@(activeSubMenuItem == "Overview" ? "active" : null)"><a asp-controller="Home" asp-action="Index">@T["Overview"]</a></li>
            <li class="@(activeSubMenuItem == "Account" ? "active" : null)"><a asp-controller="Account" asp-action="Index">@T["Account Settings"]</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  <div class="col-sm-10">
    @RenderBody()
  </div>
</div>

@section ScriptsBody {
    @RenderSection("ScriptsBody", required: false)
}