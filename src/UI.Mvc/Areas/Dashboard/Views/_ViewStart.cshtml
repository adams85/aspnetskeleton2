@using WebApp.UI.Infrastructure.Navigation
@using WebApp.UI.Models.Layout

@model ILayoutModelProvider<LayoutModel>

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_DashboardPageLayout.cshtml";

    var page = Model.Layout.PageInfo ??= Pages.FindPage(ViewContext.ActionDescriptor);
    if (page != null)
    {
        Model.Layout.Title ??= page.GetDefaultTitle(ViewContext.HttpContext, T);
    }
}
