@using WebApp.UI.Models.Layout

@model ILayoutModelProvider<LayoutModel>

@{
    Layout = "_PageLayout";

    Model.Layout.PageInfo ??= PageHelper.GetPageByRoute(ViewContext.HttpContext);

    if (Model.Layout.PageInfo != null)
    {
        Model.Layout.Title ??= Model.Layout.PageInfo.GetDefaultTitle(ViewContext.HttpContext, T);
    }
}
