<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <PackageId>Karambolo.AspNetSkeleton.POTools</PackageId>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>po</ToolCommandName>
    <PackageOutputPath>..\..\.nuget</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Buildalyzer" Version="3.2.2" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="3.1.0" />
    <PackageReference Include="Karambolo.PO.Compact" Version="1.8.0" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Language" Version="$(DotNetRuntimeVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.11.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="$(DotNetRuntimeVersion)" />
  </ItemGroup>

</Project>
